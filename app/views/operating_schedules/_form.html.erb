      <div class="col-2">
        <%= form.number_field :col_days, id: :operating_schedule_col_days, class: 'form-control' %>
      </div>
    </div>    
  </div>

  <div class="form-group">
    <%= form.label :staffID, value: 'Сотрудник id' %>
    <div class="row">
      <div class="col-2">
        <%= form.number_field :staffID, id: :operating_schedule_staffID, class: 'form-control' %>
      </div>
    </div>    
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-dark', value: 'Сохранить' %>
