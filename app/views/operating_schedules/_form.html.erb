<%= form_with(model: operating_schedule, local: true) do |form| %>
  <% if operating_schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(operating_schedule.errors.count, "error") %> prohibited this operating_schedule from being saved:</h2>

      <ul>
      <% operating_schedule.errors.full_messages.each do |message| %>
