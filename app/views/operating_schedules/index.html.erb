<p id="notice"><%= notice %></p>

<h1>График работы</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Месяц id</th>
      <th>Количество дней</th>
      <th>Сотрудник id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operating_schedules.each do |operating_schedule| %>
      <tr>
        <td><%= operating_schedule.id %></td>
        <td><%= operating_schedule.monthID %></td>
        <td><%= operating_schedule.col_days %></td>
        <td><%= operating_schedule.staffID %></td>
        <td><%= link_to 'Открыть', operating_schedule %></td>
        <td><%= link_to 'Редактировать', edit_operating_schedule_path(operating_schedule) %></td>
        <td><%= link_to 'Удалить', operating_schedule, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_operating_schedule_path, class: 'btn btn-dark' %>
