<p id="notice"><%= notice %></p>

<h1>Контракты</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Начало</th>
      <th>Конец</th>
      <th>Сотрудник id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.id %>
        <td><%= contract.start_date %></td>
        <td><%= contract.expiration_date %></td>
        <td><%= contract.staffID %></td>
        <td><%= link_to 'Открыть', contract %></td>
        <td><%= link_to 'Редактировать', edit_contract_path(contract) %></td>
        <td><%= link_to 'Удалить', contract, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_contract_path, class: 'btn btn-dark' %>
