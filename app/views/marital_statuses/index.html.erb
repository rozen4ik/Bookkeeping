<p id="notice"><%= notice %></p>

<h1>Семейное положение</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Статус</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marital_statuses.each do |marital_status| %>
      <tr>
        <td><%= marital_status.id %></td>
        <td><%= marital_status.status %></td>
        <td><%= link_to 'Открыть', marital_status %></td>
        <td><%= link_to 'Редактировать', edit_marital_status_path(marital_status) %></td>
        <td><%= link_to 'Удалить', marital_status, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_marital_status_path, class: 'btn btn-dark' %>
