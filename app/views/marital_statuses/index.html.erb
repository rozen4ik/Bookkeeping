<p id="notice"><%= notice %></p>

<h1>Marital Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marital_statuses.each do |marital_status| %>
      <tr>
        <td><%= marital_status.status %></td>
        <td><%= link_to 'Show', marital_status %></td>
        <td><%= link_to 'Edit', edit_marital_status_path(marital_status) %></td>
        <td><%= link_to 'Destroy', marital_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

