<p id="notice"><%= notice %></p>

<h1>Сотрудники</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Должность id</th>
      <th>Персональная информация id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.id %></td>
        <td><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.postID %></td>
        <td><%= staff.personal_dataID %></td>
        <td><%= link_to 'Открыть', staff %></td>
        <td><%= link_to 'Редактировать', edit_staff_path(staff) %></td>
        <td><%= link_to 'Удалить', staff, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить', new_staff_path, class: 'btn btn-dark' %>
